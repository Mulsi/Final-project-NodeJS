<head>
    <% include partials/head %>
</head>
<div id="form" class="text-center">
    <p>Please login to your account</p>
    <hr />
    <form action="/login" method="post">
        <div class="form-group">
            <label for="form_username">Username</label>
            <input id="form_username" type="text" name="username" />
        </div>
        <div class="form-group">
            <label for="form_password">Password</label>
            <input id="form_password" type="password" name="password" />
        </div>
        <button class="btn btn-primary" class="text-center" type="submit" value="Submit">Connect</button>
    </form>
    <hr />
    <button class="btn btn-success" class="text-center" type="submit" href="/signup" onClick='document.location.href="/signup"'>
        Create an account
    </button>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.js"></script>